{
  "name": "Myket APK Downloader",
  "description": "Generate download links for myket.ir Android apps",
  "version": "0.1.0",
  "manifest_version": 3,
  "host_permissions": [
    "https://myket.ir/app/*",
    "https://apiserver.myket.ir/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://myket.ir/app/*"
      ],
      "js": [
        "injectScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icons/48x48.png",
    "96": "icons/96x96.png"
  }
}