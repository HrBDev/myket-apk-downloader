{
	"compilerOptions": {
		"lib": [
			"ES2021",
			"DOM"
		],
		"strict": true,
		"module": "ES2022",
		"target": "ES2022",
		"esModuleInterop": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist/js",
		"noEmitOnError": true,
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
